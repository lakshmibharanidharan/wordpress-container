{
  "family": "wordpress-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "wordpress-container",
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/wordpress-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "environment": [
        { "name": "WORDPRESS_DB_HOST", "value": "your-db-endpoint" },
        { "name": "WORDPRESS_DB_USER", "value": "admin" },
        { "name": "WORDPRESS_DB_PASSWORD", "value": "password" },
        { "name": "WORDPRESS_DB_NAME", "value": "wordpress" }
      ]
    }
  ],
  "requiresCompatibilities": [ "FARGATE" ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole"
}
